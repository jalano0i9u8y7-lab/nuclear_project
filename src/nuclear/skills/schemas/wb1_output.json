{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "WB1_Weekly_Analysis_Output",
    "description": "WB-1 世界觀與身份裁決層輸出 (§12.1.11)",
    "type": "object",
    "required": [
        "global_assessment",
        "per_stock_assessments"
    ],
    "properties": {
        "global_assessment": {
            "type": "object",
            "required": [
                "market_regime",
                "risk_environment",
                "worldview_changed",
                "worldview_change_severity",
                "defcon_level",
                "defcon_ai_adjustment"
            ],
            "properties": {
                "market_regime": {
                    "type": "string",
                    "enum": [
                        "Bull",
                        "Bear",
                        "Range",
                        "Crisis"
                    ]
                },
                "risk_environment": {
                    "type": "string"
                },
                "global_overlays": {
                    "type": "object"
                },
                "worldview_changed": {
                    "type": "boolean"
                },
                "worldview_change_severity": {
                    "type": "string",
                    "enum": [
                        "MINOR",
                        "MAJOR"
                    ]
                },
                "defcon_level": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 5
                },
                "defcon_ai_adjustment": {
                    "type": "object",
                    "required": [
                        "original",
                        "adjusted",
                        "reasoning"
                    ],
                    "properties": {
                        "original": {
                            "type": "integer"
                        },
                        "adjusted": {
                            "type": "integer"
                        },
                        "reasoning": {
                            "type": "string"
                        }
                    }
                },
                "sub_world_highlights": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "world": {
                                "type": "string"
                            },
                            "regime": {
                                "type": "string"
                            },
                            "conflict_with": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "per_stock_assessments": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "ticker",
                    "identity_status",
                    "identity_drift",
                    "framework_changed"
                ],
                "properties": {
                    "ticker": {
                        "type": "string"
                    },
                    "identity_status": {
                        "type": "string"
                    },
                    "identity_drift": {
                        "type": "boolean"
                    },
                    "identity_drift_reasoning": {
                        "type": "string"
                    },
                    "framework_changed": {
                        "type": "boolean"
                    },
                    "escalation_triggers": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "alpha_classification": {
                        "type": "string",
                        "enum": [
                            "INDEPENDENT_ALPHA",
                            "CYCLE_DEPENDENT",
                            "UNCLEAR"
                        ]
                    },
                    "alpha_reasoning": {
                        "type": "string"
                    }
                }
            }
        }
    }
}