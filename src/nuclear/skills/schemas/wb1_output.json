{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "WB1_Output",
    "description": "WB-1 世界觀裁決輸出格式 (Weekly Worldview)",
    "type": "object",
    "required": [
        "worldview_version",
        "generated_at",
        "world_state_snapshot",
        "asset_identity_map",
        "framework_stability"
    ],
    "properties": {
        "worldview_version": {
            "type": "string",
            "pattern": "^WV_\\d{8}_\\d{3}$",
            "description": "世界觀版本號 (WV_YYYYMMDD_SEQ)"
        },
        "generated_at": {
            "type": "string",
            "format": "date-time"
        },
        "world_state_snapshot": {
            "type": "object",
            "required": [
                "market_regime",
                "risk_appetite",
                "dominant_narratives"
            ],
            "properties": {
                "market_regime": {
                    "enum": [
                        "RISK_ON",
                        "RISK_OFF",
                        "TRANSITIONING",
                        "UNCERTAIN"
                    ]
                },
                "risk_appetite": {
                    "enum": [
                        "HIGH",
                        "MODERATE",
                        "LOW",
                        "DEFENSIVE"
                    ]
                },
                "dominant_narratives": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "maxItems": 5
                },
                "defcon_level": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 5
                }
            }
        },
        "asset_identity_map": {
            "type": "object",
            "additionalProperties": {
                "type": "object",
                "required": [
                    "identity_label",
                    "narrative"
                ],
                "properties": {
                    "identity_label": {
                        "type": "string"
                    },
                    "narrative": {
                        "type": "string",
                        "maxLength": 200
                    },
                    "identity_drift": {
                        "type": "boolean"
                    },
                    "dsfp_modules_changed": {
                        "type": "integer",
                        "minimum": 0,
                        "maximum": 5
                    }
                }
            }
        },
        "narrative_map": {
            "type": "object",
            "additionalProperties": {
                "type": "object",
                "properties": {
                    "status": {
                        "enum": [
                            "ACTIVE",
                            "FADING",
                            "PIVOTING",
                            "DORMANT"
                        ]
                    },
                    "strength": {
                        "type": "number",
                        "minimum": 0,
                        "maximum": 1
                    },
                    "key_triggers": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "framework_stability": {
            "type": "object",
            "required": [
                "score",
                "rebuild_recommendation"
            ],
            "properties": {
                "score": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 1,
                    "description": "1=穩定, 0=需重建"
                },
                "rebuild_recommendation": {
                    "type": "boolean"
                },
                "rebuild_reason_top5": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "maxItems": 5
                }
            }
        },
        "escalation_tickers": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "description": "需重度更新的個股清單"
        }
    }
}